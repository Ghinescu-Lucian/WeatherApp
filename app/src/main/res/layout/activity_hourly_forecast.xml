<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242343"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hourlyforecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOURLY FORECAST"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 - 9:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9:00 - 10:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:00 - 11:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11:00 - 12:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00 - 13:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13:00 - 14:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14:00 - 15:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15:00 - 16:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16:00 - 17:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17:00 - 18:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18:00 - 19:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/hour12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19:00 - 20:00"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttondesign"
            android:text="DAY FORECAST"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <Button
            android:id="@+id/currentw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttondesign"
            android:text="CURRENT WEATHER"
            android:textColor="#ffffff"
            tools:textSize="45sp" />
    </LinearLayout>
</RelativeLayout>